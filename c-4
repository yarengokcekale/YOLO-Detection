import socket #sunucuya baÄŸlanmak iÃ§in tcp/Ä±p haberleÅŸmesi saÄŸlÄ±yor
import tkinter as tk 
from tkinter import ttk, messagebox, Canvas # arayÃ¼z (gui) oluÅŸtrumak iÃ§in
