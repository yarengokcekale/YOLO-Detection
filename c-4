        subtitle_label.pack(pady=10)
        
        # Login container
        login_container = tk.Frame(self.login_frame, bg="#2c2c2c", relief=tk.RAISED, bd=2)
        login_container.pack(pady=20, padx=50, fill=tk.X)
        
        # Username
        username_label = tk.Label(login_container,
                                 text="KullanÄ±cÄ± AdÄ±:",
                                 font=("Arial", 12, "bold"),
